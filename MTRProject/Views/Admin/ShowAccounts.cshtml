@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Show All Accounts";
}

<br />
<h4>User Accounts</h4>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Is Sales Rep?</th>
        <th>Edit</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No User Accounts</td></tr>
    }
    else
    {
        foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.IsSalesRep</td>
                <td>
                    <a asp-action="EditAccount" asp-route-id="@user.Id" class="btn btn-warning active">Edit</a>
                </td>
            </tr> }
    }
</table>

<a asp-action="CreateAccount">Create an Account</a><br />
<a asp-action="Index">Admin Page</a>
